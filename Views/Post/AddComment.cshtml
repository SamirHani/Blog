@model Blog.ViewModels.AddCommentViewModel

<style>
.comment-text {
    border: none; /* Remove border */
    outline: none; /* Remove outline */
    padding: 10px; /* Add padding for better appearance */
    border-radius: 4px; /* Rounded corners for input */
    width: 100%;
}

.comment-form, .create {
    font-size: 23px;
}

.image-upload {
    position: relative;
    display: inline-block;
    width: 30px; /* Adjust size as needed */
    height: 30px; /* Adjust size as needed */
    cursor: pointer; /* Cursor indicates clickable */
}

.image-upload input {
    display: none; /* Hide the default file input */
}

.upload-icon {
    width: 100%; /* Full width of the container */
    height: 100%; /* Full height of the container */
}
.text-muted {
    font-size: 15px;
}
</style>

<div class="row">
    <div>
        <div class="comment-form">
            <form asp-action="AddComment" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Content" class="comment-text" placeholder="Write your comment here..." />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                    <input type="hidden" asp-for="PostId" value="@ViewBag.PostId" />
                <br />
                
                <partial name="_UploadPreviewImage" model="Model" />

                <br />
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary create" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<partial name="_ScriptPreviewImage" model="Model" />


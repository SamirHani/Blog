@model IEnumerable<Blog.Models.Profile>

<table class="table table-striped table-hover">
    <tbody>
        @foreach (var item in Model)
        {
                    <tr>
                    <!-- Profile Picture -->
                    <td class="align-middle" style="width: 50px;">
                        <img src="@item.ImgUrl" alt="@item.Name's Profile Picture" 
                             style="width: 40px; height: 40px; border-radius: 50%;" />
                    </td>

                    <!-- User Name -->
                    <td class="align-middle">
                        <h4 class="mb-1">
                            <a asp-action="User" asp-controller="Profile" asp-route-id="@item.Name" 
                               style="text-decoration: none; color: #333;">
                            @item.Name
                            </a>
                        </h4>
                    </td>
                </tr>
        }

    </tbody>
</table>
<a asp-action="Index" asp-controller="Feed" class="btn btn-primary">
    <i class="fas fa-arrow-left"></i> Back to Feed
</a>